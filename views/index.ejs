    <link rel="stylesheet" type="text/css" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>



<!-- Nav bar -->
<nav class="navbar navbar-expand-md navbar-dark fixed-top " style="background-color: #a767d1;">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><img src="Screenshot_2024-02-09_183014-removebg-preview.png" height="50"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link active"  href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/addProduct">Add product</a>
        </li>
        <li class="nav-item">
          <a class="nav-link " href="/about">About</a>
        </li>
      </ul>
      
    </div>
  </div>
</nav>


  <div class="input-group rounded mx-auto mt-4" style="width: 30%">
    <input type="search" id="searchInput" class="form-control rounded" placeholder="Search" aria-label="Search"
      aria-describedby="search-addon" />
    <!-- <span class="input-group-text border-0" id="search-addon">
      <i class="fas fa-search"></i>
    </span> -->

    <button id="searchButton" class="btn btn-primary">Search</button>

  </div>











<!-- for product list  -->
<div class="container">
    <div id="product_list" class=" mt-3 row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" >
      <% products.forEach(element => { %>
      <div class="col">
        <div class="card shadow-sm">
        <img class="bd-placeholder-img card-img-top" width="100%" height="225" src=<%= element.product_image_url %> >
          
          <div class="card-body">
            <p class="card-text"><%= element.product_name %></p>
            <p>â‚±<%= element.price %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->


                    <!-- edit product -->
                <form action="/editProduct" method="post">
                  <input type="hidden" name="id" value=<%= element.id %> >
                  <input type="hidden" name="product_name" value=<%= element.product_name %> >
                  <input type="hidden" name="price" value=<%= element.price %>>
                  <input type="hidden" name="product_image_url" value=<%= element.product_image_url %> >
                  <button type="submit" class="btn btn-sm btn-success ">Edit</button>
                </form>

              </div>
              <!-- <small class="text-body-secondary">9 mins</small> -->
            </div>
          </div>
        </div>
      </div>
      <% }); %>
      
    </div>
</div>

















<script src="dom_script.js"></script>    
</body>
</html>




